<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFF4F"
    tools:context=".ImeiCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bungee"
                android:text="IMEI details Below"
                android:textColor="#131313"
                android:textSize="30dp"
                android:textStyle="italic"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etImeiCreateName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#131313"
                    android:textColor="#131313"
                    android:drawableLeft="@drawable/account_1"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:hint="Enter Phone Name"></EditText>

                <EditText
                    android:id="@+id/etImeiCreateno1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#131313"
                    android:textColor="#131313"
                    android:drawableLeft="@drawable/imei_1"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:hint="IMEI NO 1"></EditText>

                <EditText
                    android:id="@+id/etImeiCreateno2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:textColorHint="#131313"
                    android:textColor="#131313"
                    android:drawableLeft="@drawable/imei_1"
                    android:layout_marginRight="20dp"
                    android:hint="IMEI NO 2"></EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btnimeicreateAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"

                android:background="#131313"
                android:text="ADD"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="italic|bold"></Button>

            <Button
                android:id="@+id/btnimeiCreateback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="#131313"
                android:text="Back"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="italic|bold"></Button>

        </LinearLayout>

    </LinearLayout>

</ScrollView>